<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>GameStore</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>br.com.gamestore.exceptions.CadastroException</exception-type>
    <location>/errocadastro.html</location>
  </error-page>
  <error-page>
    <exception-type>br.com.gamestore.exceptions.InexistenteException</exception-type>
    <location>/erroinexistente.html</location>
  </error-page>
  <error-page>
    <exception-type>br.com.gamestore.exceptions.CarrinhoException</exception-type>
    <location>/carrinhoVazio.html</location>
  </error-page>
</web-app>